[Unit]
Description=LearnDB management service
Requires=network.target postgresql.service
After=postgresql.service

[Service]
Type=forking
User=learndb
WorkingDirectory=/home/learndb/git_repos/learndb/data_service
ExecStart=/home/learndb/git_repos/learndb/scripts/service/data_service.sh
ExecStop=pkill -u learndb application.py
Restart=always

[Install]
WantedBy=default.target
